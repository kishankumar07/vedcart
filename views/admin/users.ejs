<%- include('./layouts/header.ejs')%>

<section class="content-main">
  <div class="content-header">
    <div>
      <h2 class="content-title card-title">Users</h2>
    </div>
  </div>
  <div class="card mb-4">
    <header class="card-header">
      <div class="row align-items-center">
        <div class="col col-check flex-grow-0"></div>
        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
          <div class="col-search">
            <form class="searchform">
              <div class="input-group">
                <input
                  list="search_terms"
                  type="text"
                  class="form-control"
                  placeholder="Search User"
                />
                <button class="btn btn-light bg" type="button">
                  <i class="material-icons md-search"></i>
                </button>
              </div>
              <datalist id="search_terms">
                <option value="Products"></option>
                <option value="New orders"></option>
                <option value="Apple iphone"></option>
                <option value="Ahmed Hassan"></option>
              </datalist>
            </form>
          </div>
        </div>
      </div>
    </header>
    <!-- card-header end// -->
    <div class="card-body">

       <% if(users.length>0) { %>

        <% for (let i = 0; i < users.length; i++) { %>
      
        <article class="itemlist">
            <div class="row align-items-center">
                <div class="col col-check flex-grow-0">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" />
                    </div>
                </div>
                <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                    <a class="itemside" href="#">
                        <div class="left">
                            <img src="/adminAssets/imgs/items/1.jpg" class="img-sm img-thumbnail" alt="Item" />
                        </div>
                        <div class="info">
                            <h6 class="mb-0"><%= users[i].name %></h6>
                        </div>
                    </a>
                </div>
                <div class="col-lg-2 col-sm-2 col-4 col-price"><span><%= users[i].email %></span></div>

                <div class="col-lg-2 col-sm-2 col-4 col-status">

                    <% if(users[i].isBlocked === true) { %>
                        <span class="badge rounded-pill alert-danger">Inactive</span>
                   
                        <% } else { %>
                            <span class="badge rounded-pill alert-success">Active</span>
                            <% } %>

                   
                </div>
                <div class="col-lg-1 col-sm-2 col-4 col-date">
                    <span style="text-wrap: nowrap;"><%= users[i].mobile %></span>
                </div>
                <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                    <% if(users[i].isBlocked ===false) {%>
                    <a href="/admin/block?id=<%= users[i]._id%> " class="btn btn-sm font-sm btn-light rounded"> <i class="material-icons md-delete_forever"></i>Block</a>
                    <% }else { %>
                        <a href="/admin/unblock?id=<%= users[i]._id%>" class="btn btn-sm font-sm btn-light rounded"> <i class="material-icons md-delete_forever"></i>Unblock</a>
                        <% } %>
                </div>
            </div>
            <!-- row .// -->
        </article>
        <% } %>

        <% }else{ %>
            <tr>
                <td colspan="2">Users not found</td>
            </tr>
        <% } %>
        
    </div>
    <!-- card-body end// -->
  </div>
  <!-- card end// -->
  <div class="pagination-area mt-30 mb-50">
        <% if(page>1) { %>
            <a href="/admin/users?page=<%= page - 1 %>">Previous</a>
            <% } %>
            <span>Page<%= page %> of <%= totalPages %></span>
            <% if(page<totalPages) { %> 
                <a href="/admin/users?page=<%= page + 1 %>">Next</a>
                <% } %>   
  </div>
</section>

<%- include('./layouts/footer.ejs')%>
