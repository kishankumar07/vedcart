<script>
   let salesChart;
        
        const fetchMonthlyData = async () => {
            try {
                const response = await fetch('/admin/monthlydata');
                const { monthlySales } = await response.json();
                return monthlySales;
            } catch (error) {
                console.error('Error fetching monthly sales data:', error);
                throw error;
            }
        };

        const fetchYearlyData = async () => {
            try {
                const response = await fetch('/admin/yearlydata');
                const { yearlySales } = await response.json();
                return yearlySales;
            } catch (error) {
                console.error('Error fetching yearly sales data:', error);
                throw error;
            }
        };

        const renderChart = (labels, data, label) => {
            const ctx = document.getElementById('salesChart').getContext('2d');
            if (salesChart) {
                salesChart.destroy();
            }
            salesChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: label,
                        data: data,
                        backgroundColor: 'rgba(44, 120, 220, 0.2)',
                        borderColor: 'rgba(44, 120, 220)',
                        tension: 0.3,
                        fill: true,
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        };

        const renderMonthlySalesChart = async () => {
            const monthlySalesData = await fetchMonthlyData();
            renderChart(['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'], monthlySalesData, 'Monthly Sales');
        };

        const renderYearlySalesChart = async () => {
            const yearlySalesData = await fetchYearlyData();
            const currentYear = new Date().getFullYear();
            const years = Array.from({ length: currentYear - 2022 + 1 }, (_, i) => (2022 + i).toString());
            renderChart(years, yearlySalesData, 'Yearly Sales');
        };

        const toggleChartType = async () => {
            const chartType = document.getElementById('chartTypeSelector').value;
            if (chartType === 'monthly') {
                await renderMonthlySalesChart();
            } else if (chartType === 'yearly') {
                await renderYearlySalesChart();
            }
        };

        window.onload = async () => {
            await renderMonthlySalesChart();
        };




