                const categoryDropdownMenu = categoryDropdown.querySelector('.dropdown-menu');
        
                categoryDropdownToggle.addEventListener('click', function (event) {
                    event.preventDefault();
                    categoryDropdownMenu.classList.toggle('show');
                });
        
                // Close the dropdown if clicked outside
                document.addEventListener('click', function (event) {
                    if (!categoryDropdown.contains(event.target)) {
                        categoryDropdownMenu.classList.remove('show');
                    }
                });

// ----------  for highlighting the field which is active of the menu bar   -----------------
                const path = window.location.pathname;
        
        console.log('this is the path :',path)
        // Remove 'active' class from all menu items
        document.querySelectorAll('.main-nav .menu li').forEach(item => {
            item.classList.remove('active');
        });

        // Add 'active' class to the current menu item
        if (path === "/") {
            document.getElementById("home-menu").classList.add('active');
        } else if (path.startsWith("/shop")) {
            document.getElementById("shop-menu").classList.add('active');
        } else if (path.startsWith("/about")) {
