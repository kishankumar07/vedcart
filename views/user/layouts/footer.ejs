<script>
// for the accuracy at date
    document.addEventListener("DOMContentLoaded", function() {
            var currentYear = new Date().getFullYear();
            document.getElementById("current-year").textContent = currentYear;
        });
   

       //this search functionality is for search conatiner at large screens
    document.addEventListener("DOMContentLoaded", function() {
        const searchInput = document.getElementById("q");
        const searchResults = document.getElementById("searchResults");
        let debounceTimeout;
    
        searchInput.addEventListener("input", function() {
            clearTimeout(debounceTimeout);
           
    
            debounceTimeout = setTimeout(function() {
            const query = searchInput.value.trim();

            if (query.length > 0) {
                fetch(`/mainSearch?q=${query}`)
                    .then(response => response.json())
                    .then(data => {
                        searchResults.innerHTML = "";




                        if (data.length > 0) {
                            data.forEach(product => {
                                const item = document.createElement("div");
                                item.classList.add("search-result-item");

                                  const img = document.createElement("img");
                            img.classList.add("default-img", "product-image");
                            img.src = product.image ? `/adminAssets/imgs/category/${product.image}` : 'default-image.jpg';
                            img.alt = product.name;


                            const text = document.createElement("span");
                            text.classList.add("product-name");
                            text.textContent = product.name;
                            
                           
                            item.appendChild(img);
                            item.appendChild(text);

                                item.addEventListener("click", () => {
                                    window.location.href = `/productPage/?id=${product._id}`;
                                });
                                searchResults.appendChild(item);
                            });
                            searchResults.style.display = "block";
                        } else {

                            const item = document.createElement("div");
                                item.classList.add("search-result-item");
                                const text = document.createElement("span");
                                text.textContent = 'No item found';
                                item.appendChild(text);
                                searchResults.appendChild(item);
                                searchResults.style.display = "block";
                        }
                    });
            } else {
                searchResults.style.display = "none";
            }
        }, 1000); 
        });
    
        document.addEventListener("click", function(event) {
            if (!searchResults.contains(event.target) && event.target !== searchInput) {
                searchResults.style.display = "none";
            }
        });
    });

    

// this search functionality is for mobile menu container
    document.addEventListener("DOMContentLoaded", function() {
        const mobileSearchInput = document.getElementById("mobile-search");
        const mobileSearchResults = document.getElementById("mobileSearchResults");
        let mobileDebounceTimeout;

        mobileSearchInput.addEventListener("input", function() {
            clearTimeout(mobileDebounceTimeout);

            mobileDebounceTimeout = setTimeout(function() {
                const query = mobileSearchInput.value.trim();

                if (query.length > 0) {
                    fetch(`/mainSearch?q=${query}`)
                        .then(response => response.json())
                        .then(data => {
                            mobileSearchResults.innerHTML = "";

                            if (data.length > 0) {
                                data.forEach(product => {
                                    const item = document.createElement("div");
                                    item.classList.add("search-result-item");

                                    const img = document.createElement("img");
                                    img.classList.add("default-img", "product-image");
                                    img.src = product.image ? `/adminAssets/imgs/category/${product.image}` : 'default-image.jpg';
                                    img.alt = product.name;

                                    const text = document.createElement("span");
                                    text.classList.add("product-name");
                                    text.textContent = product.name;

                                    item.appendChild(img);
                                    item.appendChild(text);

                                    item.addEventListener("click", () => {
                                        window.location.href = `/productPage/?id=${product._id}`;
                                    });

                                    mobileSearchResults.appendChild(item);
                                });
                                mobileSearchResults.style.display = "block";
                            } else {
                                const item = document.createElement("div");
                                item.classList.add("search-result-item");
                                const text = document.createElement("span");
                                text.textContent = 'No item found';
                                item.appendChild(text);
                                mobileSearchResults.appendChild(item);
                                mobileSearchResults.style.display = "block";
                            }
                        });
                } else {
                    mobileSearchResults.style.display = "none";
                }
            }, 1000);
        });

        document.addEventListener("click", function(event) {
            if (!mobileSearchResults.contains(event.target) && event.target !== mobileSearchInput) {
                mobileSearchResults.style.display = "none";
            }
        });
