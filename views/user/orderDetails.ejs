


<style>
    body{
    background:#eee;
}
.card {
    box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
}
.card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0 solid rgba(0,0,0,.125);
    border-radius: 1rem;
}
.text-reset {
    --bs-text-opacity: 1;
    color: inherit!important;
}
a {
    color: #5465ff;
    text-decoration: none;
}
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>



<div class="container-fluid">

    <div class="container">
      <!-- Title -->
      <div class="d-flex justify-content-between align-items-center py-3">
        <h2 class="h5 mb-0"><a href="#" class="text-muted"></a> Order #<%= orderPlacedByTheUser.id %></h2>
      </div>
    
      <!-- Main content -->
      <div class="row">
        <div class="col-lg-8">
          <!-- Details -->
          <div class="card mb-4">
            <div class="card-body">
              <div class="mb-3 d-flex justify-content-between">
                <div>
                  <span class="me-3"><%= orderPlacedByTheUser.date %></span>
                  <span class="me-3"><%= orderPlacedByTheUser.time %></span>
                  <span class="me-3">#<%= orderPlacedByTheUser.id %></span>
                  <!-- <span class="me-3">Visa -1234</span> -->
                  <span class="badge rounded-pill bg-info">SHIPPING</span>
                </div>
                <div class="d-flex">
                  <button class="btn btn-link p-0 me-3 d-none d-lg-block btn-icon-text"><i class="bi bi-download"></i> <span class="text">Invoice</span></button>
                  <div class="dropdown">
                    <button class="btn btn-link p-0 text-muted" type="button" data-bs-toggle="dropdown">
                      <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                      <li><a class="dropdown-item" href="#"><i class="bi bi-pencil"></i> Edit</a></li>
                      <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i> Print</a></li>
                    </ul>
                  </div>
                </div>
              </div>
              <table class="table table-borderless">
                <tbody>

                    <% orderPlacedByThe
                    User.Products.forEach(product =>{ %>

                   
                  <tr>
                    <td>
                      <div class="d-flex mb-2">
                        <div class="flex-shrink-0">
                          <img src="/adminAssets/imgs/category/<%= product.image[0] %>" alt="" width="35" class="img-fluid">
                        </div>
                        <div class="flex-lg-grow-1 ms-3">
                          <h6 class="small mb-0"><a href="#" class="text-reset"><%= product.name %></a></h6>
                          <!-- <span class="small">Color: Black</span> -->
                        </div>
                      </div>
                    </td>
                    <td>1</td>
                    <td class="text-end">₹.<%= product.price %></td>
                  </tr>

                  <% }) %>
                  
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="2">Subtotal</td>
                    <td class="text-end">₹.<%= orderPlacedByTheUser.total %></td>
                  </tr>
                  <tr>
                    <td colspan="2">Shipping</td>
                    <td class="text-end"><%= orderPlacedByTheUser.shipping %></td>
                  </tr>
                  <tr>
                    <td colspan="2">Discount</td>
                    <td class="text-danger text-end">₹0.00</td>
                  </tr>
                  <tr class="fw-bold">
                    <td colspan="2">TOTAL</td>
                    <td class="text-end"><%= orderPlacedByTheUser.grandTotal %></td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
          <!-- Payment -->
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-lg-6">
                  <h3 class="h6">Payment Method</h3>
                  <p>Cash on Delivery <br>
                  Total:₹<%= orderPlacedByTheUser.grandTotal %> <span class="badge bg-warning rounded-pill"><%= orderPlacedByTheUser.paymetnStatus %></span></p>
                </div>
                <div class="col-lg-6">
                  <h3 class="h6">Billing address</h3>
                  <address>
                    <strong><%= orderPlacedByTheUser.address.name %></strong><br>
                    <%= orderPlacedByTheUser.address.addressDetails %>
                    <br>
                    <abbr title="Phone">Phone:</abbr>₹.<%= orderPlacedByTheUser.address.mobile %>
                  </address>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <!-- Customer Notes -->
          <div class="card mb-4">
            <div class="card-body">
              <h3 class="h6">Customer Notes</h3>
              <p>Please make the delivery fast, it was for an urgency.</p>
            </div>
          </div>
          <div class="card mb-4">
            <!-- Shipping information -->
            <div class="card-body">
              <h3 class="h6">Shipping Information</h3>
              <strong>FedEx</strong>
              <span><a href="#" class="text-decoration-underline" target="_blank">FF1234567890</a> <i class="bi bi-box-arrow-up-right"></i> </span>
              <hr>
              <h3 class="h6">Address</h3>
              <address>
                <strong><%= orderPlacedByTheUser.address.name %></strong><br>
                <%= orderPlacedByTheUser.address.addressDetails %>
                <br>
                <abbr title="Phone">Phone:</abbr>  <%= orderPlacedByTheUser.address.mobile %>
              </address>
            </div>
            <a
            href="/"
            class="btn btn-outline-dark-2 btn-block mb-3"
            ><span>CONTINUE SHOPPING</span><i class="icon-refresh"></i
          ></a>

          <a
          href="/userProfile"
          class="btn btn-outline-dark-2 btn-block mb-3"
          ><span>BACK TO PROFILE PAGE</span><i class="icon-refresh"></i
        ></a>
          </div>
        </div>
      </div>
    </div>
      </div>





<div class="card-footer p-4">
  <div class="d-flex justify-content-between">
      <h5 class="fw-normal mb-0">
          <% orderPlacedByTheUser.Products.forEach(product => { %>
              <a href="#" class="mb-4" onclick="removefromorder('<%= orderPlacedByTheUser._id %>', '<%= product.productId %>')">Cancel</a>
          <% }); %>
      </h5>
      <div class="border-start h-100"></div>
  </div>
</div>



      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <script>


         function removefromorder(orderId, proId) {
            console.log('tis is he order id ',orderId);
            console.log('thsi is eh pro id ',proId);
            Swal.fire({
                title: 'Are you sure?',
                text: 'You are about to cancel request the order. This action cannot be undone!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Cancel request!',
            }).then((result) => {
                if (result.isConfirmed) {
                   
                  fetch(`/cancelOrder?orderId=${orderId}&productId=${proId}`, {
    method: 'POST',
})

                        .then(response => {

                          console.log('response  is ',response);
                          
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.json();
                        })
                        .then(data => {
                           
                            console.log('Cancel request submitted successfully:', data);
                            
                         
                            Swal.fire({
                                icon: 'success',
                                title: 'cancel request submitted!',
                                text: 'Your Cancel request has been submitted successfully.',
    
                                
                            }).then(() => {
                                // page reload
                             location.reload();
        
                               
                            });
                        })
                        .catch(error => {
                            
                            console.error('There was a problem cancelling the order:', error.message);
    
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'There was a problem cancelling the order. Please try again.',
                            });
                        });
                }
            });
        }
      </script>
















