# MongoDB connection string (URI to connect to your MongoDB database)
MONGODB_URL=

# Session secret key for securing cookies and sessions
SESSION_SECRET_KEY=

# Email credentials for authentication-related emails ( here used nodemailerjs)
AUTH_MAIL=  # Email address used for sending authentication emails
AUTH_PASS=  # Password or app-specific password for the email account

# Google OAuth credentials for login
GOOGLE_CLIENT_ID=  # Google OAuth client ID
GOOGLE_CLIENT_SECRET=  # Google OAuth client secret
GOOGLE_CALLBACK_URL=  # Callback URL for Google OAuth, e.g., http://yourdomain.com/auth/google/callback

# Admin credentials for logging into the admin dashboard
AD_EMAIL=  # Admin email address
AD_PASS=  # Admin password

# Razorpay API keys for payment integration
RazorId=  # Razorpay API key ID
RazorKey=  # Razorpay API secret key

# Application server port
PORT=  # Port on which the application should run (e.g., 3000)
